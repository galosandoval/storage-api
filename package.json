{
  "name": "laulo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:web": "pnpm --filter @laulo/web dev",
    "build:web": "pnpm --filter @laulo/web build",
    "lint:web": "pnpm --filter @laulo/web lint",
    "lint:api": "cd apps/api && golangci-lint run ./...",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx}": [
      "pnpm --filter @laulo/web eslint --fix",
      "pnpm --filter @laulo/web prettier --write"
    ],
    "apps/web/**/*.{js,jsx,json,css,md}": [
      "pnpm --filter @laulo/web prettier --write"
    ],
    "apps/api/**/*.go": [
      "bash -c 'cd apps/api && golangci-lint run --fix ./...'"
    ]
  }
}
